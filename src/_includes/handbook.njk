            {% md snippet2 %}
            </div>            
        </section>   
        <script>
            function toggleSection(event, button) {
                event.preventDefault(); // Prevent the default button behavior
                var liElement = button.parentElement;
                var isOpen = liElement.classList.contains('open');
                // Toggle the class
                if (isOpen) {
                    liElement.classList.remove('open');
                    liElement.classList.add('closed');
                } else {
                    liElement.classList.remove('closed');
                    liElement.classList.add('open');
                }
                // Close other sections
                var otherSections = document.querySelectorAll('li');
                otherSections.forEach(function(section) {
                    if (section !== liElement) {
                        section.classList.remove('open');
                        section.classList.add('closed');
                    }
                });
            }
            function displayContent(event, contentId) {
                event.preventDefault(); // Prevent the default link behavior
                // Hide all content placeholders
                var placeholders = document.querySelectorAll('.content-placeholder');
                placeholders.forEach(function(placeholder) {
                    placeholder.style.display = 'none';
                });
                
                // Display the selected content placeholder
                var selectedContent = document.getElementById(contentId);
                selectedContent.style.display = 'block';

                // Remove 'open highlighted' class from all <li> elements
                var allLiElements = document.querySelectorAll('li');
                allLiElements.forEach(function(li) {
                    li.classList.remove('open', 'highlighted');
                });

                // Add 'open highlighted' class to the grandparent <li> element of the clicked <a> tag
                var clickedLiElement = event.target.closest('li');
                if (clickedLiElement) {
                    var grandparentLiElement = clickedLiElement.closest('li').closest('li');
                    if (grandparentLiElement) {
                        grandparentLiElement.classList.add('open', 'highlighted');
                    }
                }
            }
        </script>
    </body>
